<% @swarm_skaters.each do |skater| %>
  <div class="col-xs-3">
    <div class="panel panel-info">
      <div class="container-fluid panel-heading">
        <%= link_to players_path() do %>
          <div class="row">
            <div class="col-xs-10">
              <h4 class="list-group-item-heading"><%= skater.name %></h4>
              <p class="list-group-item-text">Shoots: <%= skater.shoots %></p>
            </div>
            <div class="col-xs-2">
              <h4 class="list-group-item-heading pull-right">#<%= skater.number %></h4>
              <p class="list-group-item-text pull-right"><%= skater.position %></p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th class="text-center col-xs-2">GP</th>
                <th class="text-center col-xs-2">G</th>
                <th class="text-center col-xs-2">A</th>
                <th class="text-center col-xs-2">P</th>
                <th class="text-center col-xs-2">PIM</th>
                <th class="text-center col-xs-2">+/-</th>
              </tr>
            </thead>
            <tbody>
              <td class="text-center col-xs-2"><%= skater.gp %></td>
              <td class="text-center col-xs-2"><%= skater.goals %></td>
              <td class="text-center col-xs-2"><%= skater.assists %></td>
              <td class="text-center col-xs-2"><%= skater.points %></td>
              <td class="text-center col-xs-2"><%= skater.pim %></td>
              <td class="text-center col-xs-2"><%= skater.plusMinus %></td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
