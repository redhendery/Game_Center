<div class="container-fluid">
  <%= render 'teams/partials/teams' %>
  <div class="row games">
    <div class="col-xs-12">
      <div class="col-xs-4">
        <%= render 'teams/partials/thunder/previous' %>
      </div>
      <div class="col-xs-4">
        <%= image_tag("thunderLarge.png", alt: "Dunedin Thunder", class: "img-responsive center-block") %>
      </div>
      <div class="col-xs-4">
        <%= render 'teams/partials/thunder/upcoming' %>
      </div>
    </div>
  </div>
  <div class="row stats">
    <div class="col-xs-3">
      <%= render 'teams/partials/thunder/points' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/thunder/goals' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/thunder/assists' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/thunder/gk' %>
    </div>
  </div>
</div>
