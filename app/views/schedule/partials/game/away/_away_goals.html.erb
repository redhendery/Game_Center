<div class="panel panel-info">
  <div class="container-fluid panel-heading">
    <h4 class="list-group-item-heading heading">Goal Leaders</h4>
  </div>
  <div class="panel-body leaders">
    <% @away_points.limit(3).each_with_index do |away, i| %>
      <div class="table-responsive">
        <span><strong><%= i += 1 %>. </strong></span>
        <span><strong><%= away.name %></strong></span>
        <span class="pull-right"><strong><%= away.goals %></strong></span>
      </div>
    <% end %>
  </div>
</div>
