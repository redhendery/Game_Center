<div class="panel panel-info">
  <div class="container-fluid panel-heading">
    <h4 class="list-group-item-heading heading">Point Leaders</h4>
  </div>
  <div class="panel-body leaders">
    <% @home_points.limit(3).each_with_index do |home, i| %>
      <div class="table-responsive">
        <span><strong><%= i += 1 %>. </strong></span>
        <span><strong><%= home.name %></strong></span>
        <span class="pull-right"><strong><%= home.points %></strong></span>
      </div>
    <% end %>
  </div>
</div>
