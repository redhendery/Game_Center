<div class="container-fluid">
  <div class="well">
    <ul class="nav nav-pills nav-justified">
      <li><%= link_to 'League Leaders', players_path %></li>
      <li><%= link_to 'Botany Swarm', players_swarm_path %></li>
      <li><%= link_to 'Canterbury Red Devils', players_reddevils_path %></li>
      <li><%= link_to 'Dunedin Thunder', players_thunder_path %></li>
      <li><%= link_to 'Skycity Stampede', players_stampede_path %></li>
      <li><%= link_to 'West Auckland Admirals', players_admirals_path %></li>
    </ul>
  </div>
  <div class="col-xs-9">
    <% @swarm_skaters.each do |skater| %>
      <div class="col-xs-4">
        <div class="panel panel-info">
          <div class="container-fluid panel-heading">
            <div class="row">
              <div class="col-xs-10">
                <h4 class="list-group-item-heading"><%= skater.name %></h4>
                <p class="list-group-item-text">Shoots: <%= skater.shoots %></p>
              </div>
              <div class="col-xs-2">
                <h4 class="list-group-item-heading pull-right">#<%= skater.number %></h4>
                <p class="list-group-item-text pull-right"><%= skater.position %></p>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center col-xs-2">GP</th>
                    <th class="text-center col-xs-2">G</th>
                    <th class="text-center col-xs-2">A</th>
                    <th class="text-center col-xs-2">P</th>
                    <th class="text-center col-xs-2">PIM</th>
                    <th class="text-center col-xs-2">+/-</th>
                  </tr>
                </thead>
                <tbody>
                  <td class="text-center col-xs-2"><%= skater.gp %></td>
                  <td class="text-center col-xs-2"><%= skater.goals %></td>
                  <td class="text-center col-xs-2"><%= skater.assists %></td>
                  <td class="text-center col-xs-2"><%= skater.points %></td>
                  <td class="text-center col-xs-2"><%= skater.pim %></td>
                  <td class="text-center col-xs-2"><%= skater.plusMinus %></td>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-xs-3">
    <% @swarm_gk.each do |gk| %>
      <div class="col-xs-12">
        <div class="panel panel-info">
          <div class="container-fluid panel-heading">
            <div class="row">
              <div class="col-xs-10">
                <h4 class="list-group-item-heading"><%= gk.name %></h4>
                <p class="list-group-item-text">Catches: <%= gk.catches %></p>
              </div>
              <div class="col-xs-2">
                <h4 class="list-group-item-heading pull-right">#<%= gk.number %></h4>
                <p class="list-group-item-text pull-right"><%= gk.position %></p>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center col-xs-2">GP</th>
                    <th class="text-center col-xs-2">GAA</th>
                    <th class="text-center col-xs-2">SVS</th>
                  </tr>
                </thead>
                <tbody>
                  <td class="text-center col-xs-2"><%= gk.gp %></td>
                  <td class="text-center col-xs-2"><%= gk.gaa %></td>
                   <td class="text-center col-xs-2">.<%= gk.svs %></td>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
