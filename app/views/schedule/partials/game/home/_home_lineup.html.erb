<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Position</th>
      </tr>
    </thead>
    <tbody>
      <% @home_lineup.each do |home| %>
        <tr>
          <td><%= home.number %></td>
          <td><%= home.name %></td>
          <td><%= home.position %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
