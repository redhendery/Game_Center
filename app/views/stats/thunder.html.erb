<div class="container-fluid">
  <div class="well">
    <ul class="nav nav-pills nav-justified">
      <li><%= link_to 'League Leaders', stats_path %></li>
      <li><%= link_to 'All', stats_all_path %></li>
      <li><%= link_to 'Botany Swarm', stats_swarm_path %></li>
      <li><%= link_to 'Canterbury Red Devils', stats_reddevils_path %></li>
      <li><%= link_to 'Skycity Stampede', stats_stampede_path %></li>
      <li><%= link_to 'West Auckland Admirals', stats_admirals_path %></li>
    </ul>
  </div>
  <table id="thunder" class="table table-striped" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>GP</th>
        <th>G</th>
        <th>A</th>
        <th>P</th>
        <th>PIM</th>
        <th>+/-</th>
      </tr>
    </thead>
    <tbody>
    <% @thunder_skaters.each_with_index do |skater, i| %>
      <tr>
        <td><%= skater.name %></td>
        <td><%= skater.position %></td>
        <td><%= skater.gp %></td>
        <td><%= skater.goals %></td>
        <td><%= skater.assists %></td>
        <td><%= skater.points %></td>
        <td><%= skater.pim %></td>
        <td><%= skater.plusMinus %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
