<div class="container-fluid">
  <%= render 'teams/partials/teams' %>
  <div class="row games">
    <div class="col-xs-12">
      <div class="col-xs-4">
        <%= render 'teams/partials/reddevils/previous' %>
      </div>
      <div class="col-xs-4">
        <%= image_tag("redDevilsLarge.png", alt: "Canterbury Red Devils", class: "img-responsive center-block") %>
      </div>
      <div class="col-xs-4">
        <%= render 'teams/partials/reddevils/upcoming' %>
      </div>
    </div>
  </div>
  <div class="row stats">
    <div class="col-xs-3">
      <%= render 'teams/partials/reddevils/points' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/reddevils/goals' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/reddevils/assists' %>
    </div>
    <div class="col-xs-3">
      <%= render 'teams/partials/reddevils/gk' %>
    </div>
  </div>
